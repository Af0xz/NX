{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "lib": ["ESNext", "DOM"],
    "types": ["@citizenfx/client", "@types/node"],
    "outDir": "./",
    "baseUrl": "./",
    "paths": {
      "@class/*": ["class/*"],
      "@events/*": ["events/*"],
      "@items/*": ["items/*"],
      "@player/*": ["player/*"],
      "@utils/*": ["utils/*"],
      "@shared/*": ["../shared/*"]
    }
  },
  "include": ["./**/*", "../shared/**/*"],
  "exclude": ["node_modules"]
}
